{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Cannabis product catalog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "sku": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50
    },
    "category": {
      "type": "enumeration",
      "enum": ["Indica", "Hybrid"],
      "required": true
    },
    "tagline": {
      "type": "string",
      "maxLength": 500
    },
    "description": {
      "type": "text",
      "required": true
    },
    "full_description": {
      "type": "richtext"
    },
    "best_for": {
      "type": "text"
    },
    "warning": {
      "type": "text"
    },
    "thc_content": {
      "type": "string",
      "maxLength": 50
    },
    "flavor_profile": {
      "type": "text"
    },
    "grade_category": {
      "type": "enumeration",
      "enum": ["High-end", "Mid-end", "Low-end"],
      "required": false
    },
    "sizes_available": {
      "type": "enumeration",
      "enum": ["Large", "Medium", "Small"],
      "required": false
    },
    "product_url": {
      "type": "string",
      "maxLength": 1000
    },
    "on_sale": {
      "type": "boolean",
      "default": false
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "sort_order": {
      "type": "integer",
      "default": 0
    },
    "pricing": {
      "type": "component",
      "repeatable": true,
      "required": false,
      "component": "product.pricing"
    },
    "base_price_per_pound": {
      "type": "decimal",
      "required": false,
      "min": 0
    },
    "pricing_model": {
      "type": "enumeration",
      "enum": ["per_pound", "tiered"],
      "default": "per_pound"
    },
    "pricing_unit": {
      "type": "enumeration",
      "enum": ["per_pound", "per_half_pound"],
      "default": "per_pound"
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "product.feature"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"],
      "description": "Product images used for both display and customization selection"
    },
    "customization_enabled": {
      "type": "boolean",
      "default": false
    },
    "selection_limits": {
      "type": "component",
      "repeatable": true,
      "component": "customization.selection-limits"
    }
  }
}
